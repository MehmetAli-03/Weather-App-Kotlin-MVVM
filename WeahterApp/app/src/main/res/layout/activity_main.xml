        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/layoutLocation"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Ä°nce Ã‡izgi -->
    <View
        android:layout_width="160dp"
